<form>
  <label>Source Profile</label>
  <fieldset submitButton="true">
    <input type="time" token="field1">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="text" token="src">
      <label>Source</label>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Action over Time</title>
      <chart>
        <search>
          <query>| `authentication_tstats_prestats` count from datamodel=Authentication.Authentication where Authentication.src=$src$ by _time Authentication.action span=1h | `drop_auth_dm` | timechart span=1h count by action</query>
          <earliest>@d</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.drilldown">all</option>
        <drilldown>
          <link target="_blank">/app/authentication_app/authentication_search?form.field1.earliest=$earliest$&amp;form.field1.latest=$latest$&amp;form.src=$src$&amp;form.action=$click.name2$</link>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <title>Authentication by App</title>
      <chart>
        <search>
          <query>| `authentication_tstats` count from datamodel=Authentication.Authentication where Authentication.src="$src$" by Authentication.app | `drop_auth_dm`</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">all</option>
        <drilldown>
          <link target="_blank">/app/authentication_app/authentication_search?form.src=$src$&amp;$click.name2$=$click.value$&amp;form.field1.earliest=$earliest$&amp;form.field1.latest=$latest$</link>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <title>Sourcetypes</title>
      <chart>
        <search>
          <query>| `authentication_tstats` count from datamodel=Authentication.Authentication where Authentication.src="$src$" by sourcetype</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Top Users Authenticating from this Source</title>
      <table>
        <search>
          <query>| `authentication_tstats` count from datamodel=Authentication.Authentication where Authentication.src="$src$" by Authentication.user | `drop_auth_dm` | sort 10 - count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <drilldown>
          <link target="_blank">/app/authentication_app/authentication_search?form.src=$src$&amp;form.user=$row.user$&amp;form.field1.earliest=$earliest$&amp;form.field1.latest=$latest$</link>
        </drilldown>
      </table>
    </panel>
    <panel>
      <title>Top Destinations</title>
      <table>
        <search>
          <query>| `authentication_tstats` count from datamodel=Authentication.Authentication where Authentication.src="$src$" by Authentication.dest | `drop_auth_dm` | sort 10 - count</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <drilldown>
          <link target="_blank">/app/authentication_app/authentication_search?form.src=$src$&amp;form.dest=$row.dest$&amp;form.field1.earliest=$earliest$&amp;form.field1.latest=$latest$</link>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Summary of the 100 most recent events</title>
      <table>
        <search>
          <query>|`authentication_tstats` count from datamodel=Authentication.Authentication where Authentication.src = "$src$" by _time Authentication.user Authentication.src Authentication.dest Authentication.app Authentication.action | `drop_auth_dm` | sort 100 - _time</query>
          <earliest>$field1.earliest$</earliest>
          <latest>$field1.latest$</latest>
        </search>
        <option name="drilldown">row</option>
        <drilldown>
          <link target="_blank">/app/authentication_app/authentication_search?form.user=$row.user$&amp;form.src=$row.src$&amp;form.dest=$row.dest$&amp;form.app=$row.app$&amp;form.action=$row.action$&amp;form.field1.earliest=$earliest$&amp;form.field1.latest=$latest$</link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>